<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-gray-200">


    <nav class="bg-black text-white p-4 flex justify-between items-center shadow-lg">
        <div class="text-xl font-bold">To-Do List</div>
        <div>
            <a href="/" class="px-4 py-2 hover:text-gray-400">Home</a>
            <a href="/add" class="px-4 py-2 hover:text-gray-400">Add</a>
        </div>
    </nav>

    <div class="max-w-4xl mt-8 ml-0">
        <div class="flex flex-col items-start gap-4"> 
            <% files.forEach(function(file){ %>
                <div class="p-4 bg-gray-800 border border-gray-700 shadow-md rounded-md w-1/2">
                    <h2 class="title font-bold text-gray-100">
                        <%= file %>
                        <div class="text-xs flex justify-between items-center text-gray-600 mt-6">
                            <div class="flex gap-3">
                                <a href="/viewTask/<%= file %>">VIEW</a>
                                <a href="/edit/<%= file %>">EDIT</a>
                            </div>
                            <div class="text-xs flex gap-4 items-center text-gray-600">
                                <a href="/deleteTask/<%= file %>">DONE</a>
                            </div>
                        </div>
                    </h2>
                </div>
            <% }) %>
        </div>
    </div>
</body>

</html>
